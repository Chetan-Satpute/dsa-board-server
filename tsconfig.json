{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "paths": {
      "$constants/*": [
        "./src/constants/*"
      ],
      "$controllers/*": [
        "./src/controllers/*"
      ],
      "$lib/*": [
        "./src/lib/*"
      ],
      "$utils/*": [
        "./src/utils/*"
      ],
      "$middlewares/*": [
        "./src/middlewares/*"
      ],
      "$services/*": [
        "./src/services/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
